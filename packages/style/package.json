{
  "name": "@carel-coenraad/js-boilerplate",
  "version": "0.0.1",
  "description": "JavaScript Boilerplate",
  "private": true,
  "license": "MIT",
  "scripts": {
    "format": "npm run lint:script -- --fix && npm run lint:style -- --fix && npm run format:prettier",
    "format:prettier": "prettier \"./**/*.{css,html,js,json,md,ts,tsx,yaml,yml}\" --write --ignore-path .gitignore",
    "lint": "npm run lint:md && npm run lint:script && npm run lint:style",
    "lint:md": "markdownlint *.md",
    "lint:script": "eslint . --ignore-path .gitignore",
    "lint:style": "stylelint \"./**/*.scss\"",
    "test": "npm run lint"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "markdownlint-cli": "^0.24.0",
    "prettier": "^2.0.4",
    "pretty-quick": "^3.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm test"
    }
  }
}
